{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ post.username }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <button type="submit" class="btn btn-primary"><a href="{{ path('post_index') }}" style="color: white">Back to the list</a></button>
        </li>
        <li>
            <button type="submit" class="btn btn-primary"><a href="{{ path('post_edit', { 'id': post.id }) }}" style="color: white">Edit</a></button>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-primary">Delete</button>
            {{ form_end(delete_form) }}
        </li>
    </ul>

    <style>
        button{
            margin-top: 5px;
        }
        li{
            list-style: none;
        }
    </style>
{% endblock %}
