{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.username }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.description }}</td>
                <td>
                    <ul>
                        <li>
                            <button type="submit" class="btn btn-primary"><a href="{{ path('post_show', { 'id': post.id }) }}" style="color: white" >show</a></button>
                        </li>
                        <li>
                            <button type="submit" class="btn btn-primary"><a href="{{ path('post_edit', { 'id': post.id }) }}"style="color: white" >edit</a></button>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <button type="submit" class="btn btn-primary"><a href="{{ path('post_new') }}" style="color: white;">Create a new entry</a></button>
        </li>
    </ul>





<style>
    a {
        text-decoration: none;
    }
    li{
        list-style: none;
    }
    .btn-primary {
        width: 25%;
        margin-top: 5px;
        text-decoration: none;
        color: white;

    }
</style>

{% endblock %}

