{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post edit</h1>
    {{ form_start(edit_form, {'attr' : { 'class':'form-horizontal' }})}}
    {#{{ form_widget(edit_form) }}#}
    {{ form_row(edit_form.username, {'attr' : { 'class':'form-control' }}) }}
    {{ form_row(edit_form.title, {'attr' : { 'class':'form-control' }}) }}
    {{ form_row(edit_form.description, {'attr' : { 'class':'form-control' }}) }}
    {{ form_row(edit_form.slogan, {'attr' : { 'class':'form-control' }}) }}
    {{ form_row(edit_form.number, {'attr' : { 'class':'form-control' }}) }}
    <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}
    <ul>
        <li>
            <a href="{{ path('post_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
